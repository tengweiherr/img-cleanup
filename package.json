{
  "name": "img-cleanup",
  "author": "Teng Wei Herr",
  "license": "MIT",
  "version": "1.1.0",
  "description": "CLI tool to detect and remove unused images in JS/TS/HTML projects",
  "main": "dist/cli.js",
  "files": [
    "dist"
  ],
  "bin": {
    "img-cleanup": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup-node src/cli.ts",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "bump:patch": "npm version patch",
    "bump:minor": "npm version minor",
    "bump:major": "npm version major",
    "publish:patch": "npm run test && npm run build && npm run bump:patch && npm publish",
    "publish:minor": "npm run test && npm run build && npm run bump:minor && npm publish",
    "publish:major": "npm run test && npm run build && npm run bump:major && npm publish",
    "test": "jest"
  },
  "keywords": [
    "images",
    "cleanup",
    "unused",
    "assets"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "glob": "^10.3.3"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.1",
    "tsup": "^8.4.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tengweiherr/img-cleanup.git"
  }
}
